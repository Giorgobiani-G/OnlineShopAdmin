<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ProductId" asp-route-pg=@TempData["page"] asp-route-search="@TempData["currentFilter"]" asp-route-pageSize="@TempData["pageSize"]">Edit</a> |
