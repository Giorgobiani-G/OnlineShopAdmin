@model Pager

<form asp-action="Index" asp-route-pageSize="@TempData["pageSize"]" method="post">
    <div class="row ml-auto">
        <div>
            <input type="text" name="search" id="searchText" value="@TempData["currentFilter"]">
            <input type="submit" value="Search" />
            <a asp-action="Index" asp-route-pageSize="@TempData["pageSize"]">Back To Full List</a>
        </div>

        <div class="p-2 col-3" style="margin-right:-596px;margin-left:601px">
            Showing @((Model.CurrentPage - 1) * Model.PageSize + 1)-@(Model.PageSize * Model.CurrentPage > Model.TotalItems ? Model.TotalItems : Model.PageSize * Model.CurrentPage) of @Model.TotalItems Items
        </div>
        <div style="margin-right:-170px;margin-left:556px;">
            <select class="form-control" asp-items="ViewBag.PageSizes" onchange="ChangePageSize(this);">
            </select>
        </div>
    </div>
</form>
